<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="~/">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" ariacontrols="navbarNavAltMarkup" aria-expanded="false" arialabel="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse"
             id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="~/">Home</a>
                <a class="nav-item nav-link"
                   href="~/Home/About">About</a>
                <a class="nav-item nav-link"
                   href="~/Home/Contact">Contact</a>
            </div>
        </div>
    </div>
    <br />

    
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="fixed-bottom bg-dark pt-4 pb-4">
            <div class="copyright text-sm-center text-white small">
                Copyright &copy; 2019 <span>Manual ASP.NET #2</span>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
